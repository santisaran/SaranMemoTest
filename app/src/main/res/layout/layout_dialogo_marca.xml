<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMarcadorNombre"
                android:layout_width="match_parent"
                android:text="Nombre" />

            <TextView
                android:id="@+id/tvMarcadorTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiempo" />

            <TextView
                android:id="@+id/tvMarcadorVidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vidas" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextMarcadorNombre"
                android:layout_width="match_parent"
                android:hint=""
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvMarcadorTiempoValue"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/tvMarcadorVidasValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </TableRow>

    </TableLayout>

</LinearLayout>